    private string ProcessMarkdown(string markdownContent)
    {
        var regex = new Regex(@"```(\w+)?\s*([\s\S]*?)\s*```", RegexOptions.Compiled);
        return regex.Replace(markdownContent, match =>
        {
            var language = match.Groups[1].Value;
            var code = match.Groups[2].Value;

            if (string.IsNullOrWhiteSpace(language) || !_supportedLanguages.Contains(language))
            {
                // Handle unsupported languages or missing language specifier
                language = "plaintext"; // or any default language
            }

            return $"```{language}\n{code}\n```";
        });
    }
}
